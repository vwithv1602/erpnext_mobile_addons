<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/appbar_padding_top">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_message"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="All the incoming calls will be converted into leads. Leads get updated if customer already exists."
        android:textAlignment="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sync_toggle"
        android:text="Stop Sync"
        android:padding="@dimen/appbtn_padding"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/force_sync_message"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="This section will be temporarily available which is used for force creation of leads from the selected datetime (This may have duplicate leads but solve manual creation of leads whenever WiFi is down.)"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/et_force_datetime"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="60dp"
        android:hint="Datetime (YYYY-MM-DD hh:mm:ss)"
        android:text=""
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#666"
        android:textColorHint="#aaa"
        android:singleLine="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/btnForceSync"
            android:text="Force Sync"
            android:layout_marginTop="0dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:background="#2980b9"
            android:padding="@dimen/appbtn_padding"

            />
    </RelativeLayout>

</LinearLayout>
